<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')">

  <article metal:fill-slot="content"
           class="content"
           i18n:domain="kotti_eshop"
           tal:define="shop context">

    <h1>${context.title}</h1>
    <p class="lead">
      ${context.description}
    </p>
    <div class="products-list">
      <h2>Products</h2>
      <div tal:repeat="product shop.get_all_products()">
        <h3><a href="${api.url(product)}">${product.title}</a></h3>
        <p>DESCRIPTION: ${product.description}</p>
        <p>CATEGORIES: ${product.productcategories}</p>
        <p>MATERIALS: ${product.productmaterials}</p>
        <p>TAGS: ${product.tags}</p>
        <p>TOPICS: ${product.producttopics}</p>
        <p>AGES: ${product.productages}</p>
      </div>
    </div>
  </article>
</html>