<tal:condition condition="logged_in_user">
  <p class="pull-right">
	<a class="add-to-cart shop-add-btn btn btn-primary" 
       product-id="${product.id}" href="">
       Add to cart (${product.title}, ${product.price})
    </a>
    <a class="view-cart shop-view-btn btn btn-default" href="">
       View cart
    </a>
  </p>
</tal:condition>

<tal:condition condition="logged_in_user == ''">
  <p class="pull-right">
  	<a href="${api.url(api.root, '@@login')}">Log in</a> to buy this.
  </p>
</tal:condition>